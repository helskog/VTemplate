{
  "$schema": "https://json.schemastore.org/template",
  "author": "helskog",
  "classifications": ["VRising", "Plugin"],
  "identity": "VRising.VTemplate",
  "name": "Starter project for V Rising mods",
  "shortName": "VTemplate",
  "sourceName": "VTemplate",
  "symbols": {
    "description": {
      "type": "parameter",
      "datatype": "text",
      "replaces": "descriptionString"
    }
  },
  "postActions": [
    {
      "actionId": "E2EFCF1B-D3AE-4C9A-95A5-6A3C6C4A8F6B",
      "manualInstructions": [
        { "text": "Run ./setup_git.sh to initialize Git and push to GitHub." }
      ],
      "continueOnError": true,
      "description": "Display git setup instructions"
    }
  ],
  "sources": [
    {
      "exclude": [ ".template.config/**" ]
    }
  ],
  "tags": {
    "language": "C#",
    "type": "project"
  }
}
